{
  "manifest_version": 3,
  "name": "Cashify Price Tracker",
  "version": "1.0",
  "description": "Tracks prices on cashify.in and stores them in MongoDB",
  "permissions": [
    "activeTab",
    "storage",
    "alarms",
    "tabs",
    "scripting"
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "host_permissions": [
    "https://www.cashify.in/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [{
    "matches": ["*://*.cashify.in/*"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
} 